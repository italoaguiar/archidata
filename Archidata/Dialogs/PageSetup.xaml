<Page x:Class="Archidata.Dialogs.PageSetup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Archidata.Dialogs"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Configurar Página">

    <StackPanel Margin="25">
        <TextBlock Text="Orientação:"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Retrato" Margin="0,0,15,0" GroupName="a"/>
            <RadioButton Content="Paisagem" Margin="0,0,15,0" GroupName="a" IsChecked="True"/>
        </StackPanel>
        <TextBlock Text="Papel:" Margin="0,15,0,0"/>
        <ComboBox SelectedIndex="0">
            <ComboBoxItem Content="A4"/>
            <ComboBoxItem Content="A3"/>
            <ComboBoxItem Content="A2"/>
            <ComboBoxItem Content="A1"/>
            <ComboBoxItem Content="Carta"/>
        </ComboBox>
        <TextBlock Text="Resolução:" Margin="0,15,0,0"/>
        <ComboBox SelectedIndex="2">
            <ComboBoxItem Content="200dpi"/>
            <ComboBoxItem Content="300dpi"/>
            <ComboBoxItem Content="600dpi"/>
            <ComboBoxItem Content="1200dpi"/>
        </ComboBox>
    </StackPanel>
</Page>
