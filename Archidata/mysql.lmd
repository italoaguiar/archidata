# Modelo para geração de SQL

!INIT=!TABLE|!ALTER

!TABLE=CREATE TABLE `{NAME}` (\n FOREACH[{Attributes} !ATTR] \n);\n

!ATTR=\t{NAME} !TYPE|!AT \n
!TYPE={TYPE}|{TYPE} !SIZE
!SIZE=({LEN})

!AT= !PK|!NN|!AI|
!PK= PRIMARY KEY
!NN= NOT NULL
!AI= AUTO_INCREMENT {INI} {INC}

!ALTER=ADDCOLUMN|ADDCONSTRAINT
!ADDCOLUMN= \nALTER TABLE `{NAME}` ADD COLUMN `{COLUMN}` !TYPE;\n
!ADDCONSTRAINT= \nALTER TABLE `{NAME}` ADD CONSTRAINT `{PK}` FOREIGN KEY (`{PKID}`) REFERENCES `{REF}` (`{REFID}`);
